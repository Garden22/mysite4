<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">

	<select id="selectList" resultType="GuestBookVo">
		<![CDATA[
			SELECT no
			       ,name
			       ,content
			       ,TO_CHAR(reg_date, 'YYYY-MM-DD HH:MI') regDate
			FROM   guestbook
			ORDER BY ASC
		]]>
	</select>
	
	
	<insert id="insertVisit" parameterType="GuestBookVo">
		<![CDATA[
			INSERT INTO guestbook
			VALUES(seq_guestbook_no.nextval, #{name}, #{password}, #{content}, SYSDATE)
		]]>
	</insert>
	
	
	<select id="findPw" parameterType="GuestBookVo" resultType="GuestBookVo">
		<![CDATA[
			SELECT no
			FROM   guestbook
			WHERE  no = #{no}
			AND    password = #{password}
		]]>
	</select>
	
	
	<delete id="deleteVisit" parameterType="GuestBookVo">
		<![CDATA[
			DELETE guestbook
			WHERE  no = #{no}
		]]>
	</delete>
	
</mapper>